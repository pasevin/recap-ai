{
  "name": "recap-ai",
  "description": "A modern CLI tool for aggregating and summarizing data from multiple services",
  "version": "0.0.1",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "recap": "./bin/run.js"
  },
  "scripts": {
    "build": "tsc -b",
    "clean": "rimraf dist",
    "lint": "eslint . --ext .ts",
    "postpack": "rimraf oclif.manifest.json",
    "prepack": "rimraf dist && bun run build && oclif manifest",
    "test": "bun test",
    "dev": "./bin/run.js"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "files": [
    "/bin",
    "/dist",
    "/src",
    "/oclif.manifest.json"
  ],
  "dependencies": {
    "@inquirer/confirm": "^5.1.3",
    "@inquirer/input": "^4.1.3",
    "@inquirer/number": "^3.0.6",
    "@inquirer/password": "^4.0.6",
    "@inquirer/select": "^4.0.6",
    "@linear/sdk": "^37.0.0",
    "@oclif/core": "^3.0.0",
    "@oclif/plugin-help": "^5.0.0",
    "@oclif/plugin-plugins": "^4.0.0",
    "@octokit/rest": "^20.0.2",
    "chalk": "^5.4.1",
    "openai": "^4.80.0",
    "ora": "^8.1.1"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "bun-types": "latest",
    "eslint": "^8.0.0",
    "jest": "^29.7.0",
    "oclif": "^4.0.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.0"
  },
  "oclif": {
    "bin": "recap",
    "dirname": "recap",
    "commands": "./dist/commands",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-plugins"
    ],
    "topicSeparator": " ",
    "topics": {
      "config": {
        "description": "Configure API tokens and settings"
      },
      "github": {
        "description": "Fetch data from GitHub repository"
      },
      "linear": {
        "description": "Fetch data from Linear"
      }
    }
  }
}
