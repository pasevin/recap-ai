{
  "name": "recap-ai",
  "description": "A modern CLI tool for aggregating and summarizing data from multiple services",
  "version": "0.0.1",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "recap": "./bin/run.js"
  },
  "scripts": {
    "build": "tsc -b",
    "clean": "rimraf dist",
    "lint": "eslint . --ext .ts",
    "postpack": "rimraf oclif.manifest.json",
    "prepack": "rimraf dist && bun run build && oclif manifest",
    "test": "bun test",
    "dev": "./bin/run.js"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "dependencies": {
    "@oclif/core": "^3.0.0",
    "@oclif/plugin-help": "^5.0.0",
    "@oclif/plugin-plugins": "^4.0.0",
    "@octokit/rest": "^20.0.2",
    "chalk": "^5.3.0",
    "dotenv": "^16.3.1",
    "inquirer": "^12.3.2",
    "ora": "^8.0.1"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "bun-types": "latest",
    "eslint": "^8.0.0",
    "jest": "^29.7.0",
    "oclif": "^4.0.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.0"
  },
  "oclif": {
    "bin": "recap",
    "dirname": "recap",
    "commands": "./src/commands",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-plugins"
    ]
  },
  "files": [
    "/bin",
    "/dist",
    "/src",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json"
  ]
}
