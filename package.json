{
  "name": "recap-ai",
  "description": "A modern CLI tool for aggregating and summarizing data from multiple services",
  "version": "0.2.0",
  "main": "dist/index.js",
  "author": {
    "name": "Aleksandr Pasevin",
    "email": "pasevin@gmail.com",
    "url": "https://github.com/pasevin"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/pasevin/recap-ai.git"
  },
  "homepage": "https://github.com/pasevin/recap-ai#readme",
  "bugs": {
    "url": "https://github.com/pasevin/recap-ai/issues"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "keywords": [
    "cli",
    "ai",
    "github",
    "linear",
    "developer-tools",
    "productivity",
    "typescript",
    "openai",
    "activity-summary",
    "development-workflow"
  ],
  "bin": {
    "recap": "./bin/run.js",
    "recap-mcp-server": "./bin/mcp-server.js"
  },
  "scripts": {
    "build": "bun run build:all",
    "build:all": "bun run build:cli && bun run build:packages && bun run build:web",
    "build:cli": "tsc -b",
    "build:packages": "cd packages/shared && npm run build && cd ../core && npm run build",
    "build:web": "cd apps/web && npm run build",
    "build:check": "bun run build:check:cli && bun run build:check:packages && bun run build:check:web",
    "build:check:cli": "tsc --noEmit",
    "build:check:packages": "cd packages/shared && npx tsc --noEmit && cd ../core && npx tsc --noEmit",
    "build:check:web": "cd apps/web && npx tsc --noEmit",
    "clean": "rimraf dist && cd packages/shared && npm run clean && cd ../core && npm run clean && cd apps/web && rm -rf .next",
    "clean:all": "bun run clean && cd apps/web && rm -rf node_modules && cd ../.. && rm -rf node_modules packages/*/node_modules apps/*/node_modules",
    "dev": "./bin/run.js",
    "dev:web": "cd apps/web && npm run dev",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\" --ignore-path .gitignore",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\" --ignore-path .gitignore",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "lint:all": "bun run lint && cd packages/shared && npm run lint && cd ../core && npm run lint && cd ../.. && cd apps/web && npm run lint",
    "lint:all:fix": "bun run lint:fix && cd packages/shared && npm run lint:fix && cd ../core && npm run lint:fix && cd ../.. && cd apps/web && npm run lint -- --fix",
    "mcp-server": "./bin/mcp-server.js",
    "postpack": "rimraf oclif.manifest.json",
    "prepack": "rimraf dist && bun run build:cli && oclif manifest",
    "test": "bun test",
    "test:all": "bun test && cd packages/shared && npm run test && cd ../core && npm run test",
    "test:cli": "bun test",
    "test:ci": "bun run test:cli --reporter=verbose --timeout=30000",
    "prepare": "husky"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "files": [
    "/bin",
    "/dist",
    "/src",
    "/oclif.manifest.json"
  ],
  "dependencies": {
    "@inquirer/confirm": "^5.1.3",
    "@inquirer/input": "^4.1.3",
    "@inquirer/number": "^3.0.6",
    "@inquirer/password": "^4.0.6",
    "@inquirer/select": "^4.0.6",
    "@linear/sdk": "^37.0.0",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@oclif/core": "^3.0.0",
    "@oclif/plugin-help": "^5.0.0",
    "@oclif/plugin-plugins": "^4.0.0",
    "@oclif/plugin-version": "^2.0.0",
    "@octokit/rest": "^20.0.2",
    "chalk": "^5.4.1",
    "openai": "^5.10.1",
    "ora": "^8.1.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "bun-types": "latest",
    "eslint": "^9.32.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "oclif": "^4.0.0",
    "prettier": "^3.6.2",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.0"
  },
  "oclif": {
    "bin": "recap",
    "dirname": "recap",
    "commands": "./dist/commands",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-plugins",
      "@oclif/plugin-version"
    ],
    "additionalVersionFlags": [
      "-v"
    ],
    "topicSeparator": " ",
    "topics": {
      "config": {
        "description": "Configure API tokens and settings"
      },
      "github": {
        "description": "Fetch data from GitHub repository"
      },
      "linear": {
        "description": "Fetch data from Linear"
      },
      "mcp": {
        "description": "Manage MCP server for agent integration"
      }
    }
  }
}
